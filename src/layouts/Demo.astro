---
import ActivityCard from "../components/ActivityCard.astro";
// import JSON file with activities
import activities from "../data/activities.json";

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Actividades en Santoña</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <header class="bg-white shadow w-full">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex justify-between items-center">
        <div class="flex items-center">
          <img
            alt="Vercel logo placeholder"
            class="mr-3 h-6 sm:h-9"
            height="30"
            src="data:image/svg+xml;base64,"
            width="100"
          />
          <nav class="hidden md:flex space-x-10">
            <a class="text-base font-medium text-gray-500 hover:text-gray-900" href="#">Lista</a>
            <a class="text-base font-medium text-gray-500 hover:text-gray-900" href="#">Calendario</a>
            <a class="text-base font-medium text-gray-500 hover:text-gray-900" href="#">Contacto</a>

          </nav>
        </div>
        <div class="flex items-center">
          <!-- <a class="text-base font-medium text-gray-500 hover:text-gray-900" href="#"> Contact</a> -->
          <a
            class="ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-black hover:bg-gray-900"
            href="#"
          >
            <i class="fas fa-plus mr-2"> </i>
            Añadir
          </a>
        </div>
      </div>
    </header>
    <main class="max-w-7xl mx-auto py-6 px-2 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <h1 class="text-5xl font-bold leading-tight text-gray-900">Actividades en Santoña</h1>
        <p class="mt-5 text-xl text-gray-500">Busca todas las actividades que puedes realizar en Santoña</p>
      </div>
      <div class="mt-10">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between px-4 sm:px-0 mb-1">
          <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Filtro</h2>
          </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
          <form action="#" method="POST">
            <div class="shadow overflow-hidden sm:rounded-md">
              <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                <div class="grid grid-cols-3 gap-6">
                  <div class="col-span-3 sm:col-span-2">
                    <label class="sr-only" for="search-templates">Search templates</label>
                    <input
                      class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                      id="search-templates"
                      name="search-templates"
                      placeholder="Por ejemplo: Patinaje"
                      type="text"
                    />
                  </div>
                </div>
                <div class="grid grid-cols-3 gap-6">
                  <div class="col-span-3 sm:col-span-2">
                    <fieldset>
                      <legend class="text-base font-medium text-gray-900">Para quien</legend>
                      <div class="mt-4 space-y-4">
                        <div class="flex items-center">
                          <input
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                            id="use-case-all"
                            name="use-case"
                            type="checkbox"
                          />
                            <label class="ml-3 block text-sm font-medium text-gray-700" for="use-case-all">Niños</label>
                        </div>
                        <div class="flex items-center">
                          <input
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                            id="use-case-starter"
                            name="use-case"
                            type="checkbox"
                          />
                          <label class="ml-3 block text-sm font-medium text-gray-700" for="use-case-starter">
                            Adultos
                          </label>
                        </div>
                      </div>
                    </fieldset>
                    <fieldset class="mt-4">
                      <legend class="text-base font-medium text-gray-900">Enfoque</legend>
                      <div class="mt-4 space-y-4">
                        <div class="flex items-center">
                          <input
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                            id="use-case-all"
                            name="use-case"
                            type="checkbox"
                          />
                            <label class="ml-3 block text-sm font-medium text-gray-700" for="use-case-all">Deporte</label>
                        </div>
                        <div class="flex items-center">
                          <input
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                            id="use-case-starter"
                            name="use-case"
                            type="checkbox"
                          />
                          <label class="ml-3 block text-sm font-medium text-gray-700" for="use-case-starter">
                            Creatividad
                          </label>
                        </div>
                        <div class="flex items-center">
                          <input
                            class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                            id="use-case-ecommerce"
                            name="use-case"
                            type="checkbox"
                          />
                          <label class="ml-3 block text-sm font-medium text-gray-700" for="use-case-ecommerce">
                            Cultura
                          </label>
                        </div>
                      </div>
                    </fieldset>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="mt-10 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {activities.map((activity) => (
          <ActivityCard {...activity} />
        ))}
      </div>
    </main>
  </body>
</html>
